{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.collection",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2015.generator",
      "es2018.promise"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/scripts/ts/**/*.ts",
    "src/scripts/vue/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
